<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_folder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTenSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder 1"
                android:textColor="#00AC47"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/open_recent_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open recently: 2 hours ago"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibt_menu_function"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/ic_menu_item" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>